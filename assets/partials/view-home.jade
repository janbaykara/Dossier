.app__content

  h2.em2 {{user.name}}, your dossiers are ready for you...

  form.create-dossier
    input.transparent-input(type='text', name='name')
    ul
      | -- categories --
    ul
      | -- subcats --
    ul
      | -- tags --

  section
    h3 Users
    div(ng-repeat='user in users')
      div {{user.name}}
  section(ng-controller='CategoryController')
    h3 Categories
    form(name='create-category', ng-keyup="$event.keyCode == 13 && create()")
      input(required, ng-model='newCategory.name', type='text', name='name', placeholder='Create a new category')
      input(required, ng-model='newCategory.color', type='color', name='color')
      select(ng-model="newCategory.parent", name="parent", ng-options="cat.name group by cat.parent for cat in categories")
      li(class='border-left-variable' ng-style="{'border-left-color': category.color }", ng-repeat='category in categories')
        span {{category.name}}
        span {{category.parent}}
        span {{category.children}}
        div {{category}}
        button(ng-click='delete(category)') Edit
        button(ng-click='delete(category)') Delete

  section
    h3 Dossiers
    ul
      li(ng-repeat='dossier in dossiers')
        h3(ng-bind='dossier.name')
        p(ng-bind='dossier.description')
